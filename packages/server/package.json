{
  "name": "@e2esdk/server",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "description": "End-to-end encryption server",
  "author": {
    "name": "FranÃ§ois Best",
    "email": "npm.e2esdk@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:build": "swc src --copy-files --include-dotfiles -d build --watch",
    "dev:start": "nodemon ./build/main.js | pino-pretty",
    "start": "NODE_ENV=production node ./build/main.js",
    "build": "swc src --copy-files --include-dotfiles -d build",
    "postbuild": "chmod +x ./build/database/operations.js",
    "db": "./build/database/operations.js"
  },
  "dependencies": {
    "@e2esdk/api": "workspace:*",
    "@e2esdk/core": "workspace:*",
    "@e2esdk/crypto": "workspace:*",
    "@fastify/cors": "^8.2.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.0",
    "fastify-micro": "4.0.0-beta.1",
    "fastify-plugin": "^4.3.0",
    "postgres": "^3.3.2",
    "zod": "^3.19.1",
    "zod-to-json-schema": "^3.19.0"
  },
  "devDependencies": {
    "@fastify/sensible": "*",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.18",
    "@swc/helpers": "^0.4.13",
    "@types/node": "^18.11.9",
    "chokidar": "^3.5.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "typescript": "^4.9.3",
    "zx": "^7.1.1"
  },
  "nodemonConfig": {
    "watch": [
      "build",
      ".env",
      "node_modules/@e2esdk"
    ],
    "ext": "js",
    "delay": 500,
    "signal": "SIGTERM",
    "ignoreRoot": [
      ".turbo",
      "src",
      "node_modules/**/node_modules"
    ]
  }
}
